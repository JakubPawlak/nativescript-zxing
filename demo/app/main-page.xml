<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
    <ActionBar title="ZXing Demo"/>
    <GridLayout rows="*,auto">
        <StackLayout row="0">
            <TextField id="txt" text="Demo by Master Technology" class="title"/>
            <Button text="Encode" tap="encode" />
            <Image id="img" width="100" height="100" stretch="fill"/>
            <Button id="save" text="Save" isEnabled="false" tap="save"/>
            <Button text="Load" tap="load"/>
            <Label id="results" text="" textWrap="true"/>
        </StackLayout>
        <StackLayout row="1" class="grey">
            <HtmlView html="Demo by &lt;a href='http://master-technology.com'&gt;Master Technology&lt;/a&gt;" class="footer"/>
        </StackLayout>
    </GridLayout>
</Page>
